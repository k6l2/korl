{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"windows": {
				"command": "build.bat"
			},
			"problemMatcher":[
				"$msCompile",
				// Problem matcher modification to detect linker errors.
				// Taken from: https://github.com/microsoft/vscode-cpptools/issues/4957
				// But slightly modified because it wasn't working correctly for
				//	me out of the box.
				{
				  "fileLocation": "autoDetect",
				  "pattern": {
					"regexp": "^([^\\s].*)\\s*:\\s+(?:fatal\\s+)?(error|warning)\\s+(LNK\\d+)\\s*:\\s*(.*)$",
					"kind": "file",
					"severity": 2,
					"code": 3,
					"message": 4,
					"file": 1
				  }
				}
			],
			"presentation":{
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true,
				"revealProblems": "never"
			}
		}
	]
}